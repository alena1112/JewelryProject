<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/jewelry_shop.log</file>
        <encoder>
            <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} - %-5.-5level | %-25.-25thread | %-36.-36logger{36} | %msg%n</Pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="FILE"/>
    </root>
</configuration>
