<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="PersistenceUnit" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>com.alena.preparationproject.mvc.model.Shop</class>
        <class>com.alena.preparationproject.mvc.model.Material</class>
        <class>com.alena.preparationproject.mvc.model.MaterialOrder</class>
        <class>com.alena.preparationproject.mvc.model.Jewelry</class>
        <class>com.alena.preparationproject.mvc.model.PromotionalCode</class>
        <class>com.alena.preparationproject.mvc.model.Order</class>
        <class>com.alena.preparationproject.mvc.model.Image</class>
        <class>com.alena.preparationproject.mvc.model.Settings</class>

        <exclude-unlisted-classes>true</exclude-unlisted-classes>
<!--        <properties>-->
<!--            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect"/>-->
<!--            <property name="hibernate.hbm2ddl.auto" value="update"/>-->
<!--            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>-->
<!--            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/preparation_project"/>-->
<!--            <property name="javax.persistence.jdbc.user" value="root"/>-->
<!--            <property name="javax.persistence.jdbc.password" value="root"/>-->
<!--        </properties>-->

        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/preparation_project"/>
            <property name="javax.persistence.jdbc.user" value="postgres" />
            <property name="javax.persistence.jdbc.password" value="root" />

            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update" />

            <property name="hibernate.show_sql" value="false" /> <!-- Show SQL in console -->
            <property name="hibernate.format_sql" value="true" /> <!-- Show SQL formatted -->
        </properties>
    </persistence-unit>
</persistence>